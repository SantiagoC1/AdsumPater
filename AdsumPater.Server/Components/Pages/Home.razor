    <div class="container-xl metrics-grid">
        <div><strong>+10</strong><span>Años de misión</span></div>
        <div><strong>+300</strong><span>Misioneros</span></div>
        <div><strong>+25</strong><span>Pueblos</span></div>
    </div>
</section>

<!-- ACCESOS -->
<section class="section alt">
    <div class="container-xl cards">
        <a class="card" href="/equipo">Equipo</a>
        <a class="card" href="/historia">Historia</a>
        <a class="card" href="/galeria">Galería</a>
        <a class="card" href="/foro">Foro</a>
    </div>
